{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2015.symbol",
      "dom"
    ],
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "dev_build"
  },
  "include": [
    "ts/**/*.ts",
    "third_party/**/*.ts"
  ]
}
